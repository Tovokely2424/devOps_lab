{% extends "base.html.twig" %}
{% block title %}Mes reservations !{% endblock %}
{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12 alert alert-info">
                <h2 class="text-center">Ci-dessous vous allez voir vos réservations : </h2>
                <hr>
            </div>
        </div>
        
            {% for booking in bookings %}
            {% set annonce = booking.bookingAnnonce %}
                <div class="row mt-3">
                    <div class="col-2">
                        <img src="{{ annonce.converImage}}" class="img-fluid" alt="Photo de l'annonce {{annonce.tittle}}">
                    </div>
                    <div class="col-10">
                        <h5 class="text-center">{{annonce.tittle}}</h5>
                        <p class="text-center">{{annonce.introduction}}</p>
                        <div class="row">
                            <div class="col-md-6">resérvé le <span>{{booking.createdAt | date('d-m-Y')}}</span></div>
                            <div class="col-md-6">Du {{booking.startDate | date('d-m-Y')}} au {{booking.endDate | date('d-m-Y')}}</div>
                        </div>
                        <a href="{{path('booking_show', {'id' : booking.id})}}" class="btn btn-info">PLus d'information</a>
                    </div>
                </div>
            {% endfor %}
        
    </div>
{% endblock %}