<header>
    {# Partie supérieure (optionnelle) 
    <div class="bg-white py-1 shadow-sm">
        <div class="container text-center">
            <h1 class="h4 mb-0 fw-bold">Welcome to Our Website</h1>
            <p class="text-muted mb-0">Explore our services and discover why we’re the best</p>
        </div>
    </div> #}

    {# Navbar Bootstrap 5 #}
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark py-2 shadow-sm" role="banner">
        <div class="container">
            <a class="navbar-brand text-white fw-bold" href="{{ path('homepage') }}">Pi-Quality</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="{{ path('homepage') }}">Accueil</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('annonces') }}">Annonces</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Compte
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            {% if app.user %}
                                <li><a class="dropdown-item" href="{{ path('account_profile', {'slug': app.user.slug}) }}">Mon compte</a></li>
                                <li><a class="dropdown-item" href="{{ path('account_logout') }}">Se déconnecter</a></li>
                            {% else %}
                                <li><a class="dropdown-item" href="{{ path('account_login') }}">Se connecter</a></li>
                                <li><a class="dropdown-item" href="{{ path('account_registration') }}">S'inscrire</a></li>
                            {% endif %}
                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link" href="#why-us-section">Nous connaître</a></li>
                    <li class="nav-item"><a class="nav-link" href="#testimonials-section">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact-section">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>


    {# Flash messages (avec Bootstrap 5 Toast) #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="position-fixed top-50 end-0 translate-middle-y p-3" style="z-index: 1055;">
                <div class="toast show mb-3" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="4000">
                    <div class="toast-header bg-{{ label }} text-white">
                        <strong class="me-auto text-capitalize">{{ label }}</strong>
                        <small>Maintenant</small>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Fermer"></button>
                    </div>
                    <div class="toast-body text-center">
                        {{ message|raw }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}


</header>
