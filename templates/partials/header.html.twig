    <nav class="navbar navbar-expand-lg fixed-top py-4">
      <div
        class="container d-flex justify-content-end w-100 justify-content-md-center"
      >
        <div
          class="d-flex border rounded-pill px-3 py-1 w-100 w-md-auto align-items-center justify-content-between gap-2 position-relative overflow-visible bg-white-opacity-95"
        >
          <a href="#" class="navbar-brand me-3">
            <img src="{{asset('/imagestest/logo.png')}}" alt="Logo" width="40" />
          </a>
          <button
            class="navbar-toggler border-1"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#mainNav"
            aria-controls="mainNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div
            class="collapse navbar-collapse justify-content-end justify-content-md-center w-auto"
            id="mainNav"
          >
            <ul class="nav gap-2 fw-medium">
              <li class="nav-item">
                <a
                  class="nav-link text-dark hover-bg-light rounded-pill px-3 w-100"
                  href="{{ path('annonces') }}"
                  >Annonces</a
                >
              </li>
              {% if app.user %}
              <li class="nav-item">
                <a
                  class="nav-link text-dark bg-light rounded-pill px-3 w-100"
                  href="{{ path('account_profile', {'slug' : app.user.slug})}}"
                  >Mon compte</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-dark hover-bg-light rounded-pill px-3 w-100"
                  href="{{ path('account_bookings', {'slug' : app.user.slug }) }}"
                  >Back-Office</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-dark hover-bg-light rounded-pill px-3 w-100"
                  href="{{ path('account_logout', {'slug' : app.user.slug }) }}"
                  >Se déconnecter</a
                >
              </li>
              {% else %}
              <li class="nav-item">
                <a
                  class="nav-link text-dark bg-light rounded-pill px-3 w-100"
                  href="{{ path('homepage')}}"
                  >Acceuil</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-dark hover-bg-light rounded-pill px-3 w-100"
                  href="about.html"
                  >A propos de nous</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-dark hover-bg-light rounded-pill px-3 w-100"
                  href="pricing.html"
                  >Nos tarifs</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-dark hover-bg-light rounded-pill px-3 w-100"
                  href="contact.html"
                  >Contact</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-white bg-primary rounded-pill px-3 w-100"
                  href="{{ path('account_login') }}"
                  target="_blank"
                  >Membre</a
                >
              </li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>
    </nav>


    {# Flash messages (avec Bootstrap 5 Toast) #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="position-fixed top-50 end-0 translate-middle-y p-3" style="z-index: 1055;">
                <div class="toast show mb-3" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="4000">
                    <div class="toast-header bg-{{ label }} text-white">
                        <strong class="me-auto text-capitalize">{{ label }}</strong>
                        <small>Maintenant</small>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Fermer"></button>
                    </div>
                    <div class="toast-body text-center">
                        {{ message|raw }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}


</header>
